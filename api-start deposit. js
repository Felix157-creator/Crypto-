import fetch from "node-fetch";
import { createClient } from "@supabase/supabase-js";

const supabase = createClient(
  "https://YOUR_SUPABASE_URL.supabase.co",
  "YOUR_SERVICE_KEY"
);

const FLUTTERWAVE_KEY = "YOUR_FLUTTERWAVE_SECRET_KEY";

export default async function handler(req, res) {
  const { userId, amount, method } = req.body;

  // Create pending deposit
  const { data } = await supabase.from("deposits")
    .insert([{
      user_id: userId,
      usd_amount: amount,
      status: "pending"
    }])
    .select()
    .single();

  const payload = {
    tx_ref: data.id,
    amount: amount,
    currency: "USD",
    redirect_url: "https://your-vercel-app.vercel.app/index.html",
    payment_options: method === "crypto" ? "usdt" : "card,mpesa,bank",
    customer: {
      email: "user@cryptopro.com"
    }
  };

  const response = await fetch("https://api.flutterwave.com/v3/payments", {
    method: "POST",
    headers: {
      Authorization: `Bearer ${FLUTTERWAVE_KEY}`,
      "Content-Type": "application/json"
    },
    body: JSON.stringify(payload)
  });

  const result = await response.json();
  res.json({ payment_url: result.data.link });
}
