<script>
// ============================================================
// FIXED SCRIPT - ALL SYNTAX ERRORS CORRECTED
// ============================================================

function selectDepositMethod(evt) {
    evt.preventDefault();
    var amount = parseFloat(document.getElementById('depositAmount').value);
    var method = document.getElementById('depositMethod').value; // FIXED: Removed extra closing parenthesis
    
    if (amount < 50) {
        alert('‚ùå Minimum deposit is $50');
        return;
    }
    
    closeModal('depositModal');
    
    if (method === 'MPESA') {
        alert('‚úÖ M-Pesa Payment Selected!\n\nAmount: $' + amount.toFixed(2) + '\n\nYou will be redirected to M-Pesa payment...');
    } else if (method === 'USDT') {
        alert('‚úÖ USDT Payment Selected!\n\nAmount: $' + amount.toFixed(2) + '\n\nPlease send USDT to the provided address...');
    } else if (method === 'BANK') {
        alert('‚úÖ Bank Transfer Selected!\n\nAmount: $' + amount.toFixed(2) + '\n\nBank details will be provided...');
    }
}

function showLayer(layerId) {
    document.querySelectorAll('.layer').forEach(function(layer) {
        layer.classList.remove('active');
    });
    document.getElementById(layerId).classList.add('active');
}

function showModal(modalId) {
    document.getElementById(modalId).classList.add('active');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.remove('active');
}

// Close modal when clicking outside
window.addEventListener('click', function(evt) {
    if (evt.target.classList.contains('modal')) {
        evt.target.classList.remove('active');
    }
});

// Initialize on page load
window.addEventListener('DOMContentLoaded', function() {
    console.log('‚úÖ CryptoPro Platform Loaded Successfully');
});

// ============================================================
// END OF SCRIPT
// ============================================================
</script>
